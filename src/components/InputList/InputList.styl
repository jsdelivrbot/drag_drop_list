.InputList 
  border 1px solid grey
  height 500px
  width 50%
  overflow auto

.InputList-header 
  position sticky
  top 0px
  display flex
  justify-content center
  align-items center
  height 45px
  border-bottom 1px solid black
  background #ffffff
  text-transform uppercase
  z-index 1

.InputList-content 
  display flex
  align-items center
  flex-direction column
  height 91%
  padding-top 10px
